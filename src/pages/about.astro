}

.usage-steps {
	display: flex;
	flex-direction: column;
	gap: 20px;
	margin: 20px 0;
}

.step {
	display: flex;
	align-items: flex-start;
	gap: 20px;
	padding: 20px;
	background: #f8f9fa;
	border-radius: 12px;
}

.step-number {
	background: #2a5298;
	color: white;
	width: 40px;
	height: 40px;
	border-radius: 50%;
	display: flex;
	align-items: center;
